@using GetFeedBack.Views.Shared.Components.SearchBar
@model SPager

<div class="container btn-group mb-3">
    <div class="col-4 p-0 justify-content-end">
        <form asp-controller="@Model.Controller" asp-action="@Model.Action">
            <span class="input-group rounded">
                <input class="form-control rounded" type="text" name="SearchText"
                       placeholder="Search Key" value="@Model.SearchText" />
                <input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Search" />
            </span>
        </form>
    </div>
    <div class="container">
        @if (Model.TotalPages > 0)
        {
            <ul class="pagination footer mt-3 mb-0">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" data="@Model.SearchText" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" data="@Model.SearchText" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@(Model.CurrentPage -1)">
                            Previous
                        </a>
                    </li>
                }
                @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item @(pge==Model.CurrentPage? "active":"")">
                        <a class="page-link" data="@Model.SearchText" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@pge">@pge</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" data="@Model.SearchText" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@(Model.CurrentPage+1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" data="@Model.SearchText" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@(Model.TotalPages)">Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

