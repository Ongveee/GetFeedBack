@model IEnumerable<GetFeedBack.Models.FeedBackDetails>

@{
    ViewData["Title"] = "Index";
     Layout = "~/Views/FeedBack/_Layout.cshtml";
}

<h1>Details FeedBack</h1>
<div class="btn-group mb-4">
    <a class="btn btn-success" asp-action="Index" asp-controller="FeedBack" asp-route-id="@TempData["UserId"]">Back to FeedBack</a>
</div>
<table class="table" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SenderName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderName)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary mr-2">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            debugger;
            $('#datatable').DataTable();
        })
    </script>
}

